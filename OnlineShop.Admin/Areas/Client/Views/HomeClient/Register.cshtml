
@{
    ViewBag.Title = "Đăng Ký";
    ViewBag.Message = "EnableSlider";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}

<style>
    .has-error {
        border: 1px solid red !important;
    }

    .mr-15 {
        margin-right: 0px !important;
    }

    .alert-danger {
        color: #b94a48;
        background-color: #f2dede;
        border-color: #eed3d7 !important;
    }

    .alert {
        padding: 10px !important;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    }
</style>
<script src="@Url.Content("~/Scripts/app/clientController/registerForClientRegisterPage.js")"></script>
@using (Ajax.BeginForm("Register", "HomeClient", null, new AjaxOptions { HttpMethod = "POST" }, new { @name = "registerValid", @id = "registerValid", @novalidate = "novalidate" }))
{
    <div class="wrap" ng-controller="registerForClientRegisterPage">
        <div class="preview-page">
            <ul class="back-links">
                <li><a href="@Url.Action("Index", "HomeClient")">Trang Chủ</a> ::</li>
                <li>Đăng Ký</li>
            </ul>
            <div class="clear"></div>
            <div class="contact-form" style="padding: 0 0;">
                <div class="alert alert-danger mr-15" ng-show="IsSave && formHasError()">
                    <ul style="margin-bottom:0;">
                        <li style="font-size: 14px;" ng-show="showErrorMsg(registerValid.UserName)">Tên Đăng Nhập Không Được Để Trống</li>
                        <li style="font-size: 14px;" ng-show="showErrorMsg(registerValid.Password)">Mật Khẩu Không Được Để Trống</li>
                        <li style="font-size: 14px;" ng-show="showErrorMsg(registerValid.Name)">Họ Và Tên Không Được Để Trống</li>
                        <li style="font-size: 14px;" ng-show="CheckDuplicate">Tên Đăng Nhập Đã Tồn Tại</li>
                    </ul>
                </div>
                <div style="width: 30%;float: left;">
                    <span style="float: right; padding: 11px;">
                        Tên Đăng Nhập
                        <span style="float:right;">:</span>
                        <span style="float:right;color:red;">*</span>
                    </span>
                </div>
                <div style="width: 1%;float: left;"></div>
                <div style="width: 69%;float: left;">
                    <input style="width: 75%;"
                           name="UserName"
                           type="text"
                           class="textbox textbox1"
                           ng-model="register.UserName"
                           ng-class="{'has-error': showErrorMsg(registerValid.UserName) || CheckDuplicate}"
                           required
                           placeholder="Tên Đăng Nhập...">
                </div>

                <div class="clear"></div>

                <div style="width: 30%;float: left;">
                    <span style="float: right; padding: 11px;">
                        Mật Khẩu
                        <span style="float:right;">:</span>
                        <span style="float:right;color:red;">*</span>
                    </span>
                </div>
                <div style="width: 1%;float: left;"></div>
                <div style="width: 69%;float: left;">
                    <input style="width: 75%;"
                           name="Password"
                           type="password"
                           class="textbox textbox1"
                           ng-model="register.Password"
                           ng-class="{'has-error': showErrorMsg(registerValid.Password)}"
                           required
                           placeholder="Mật Khẩu...">
                </div>

                <div class="clear"></div>

                <div style="width: 30%;float: left;">
                    <span style="float: right; padding: 11px;">
                        Họ Và Tên
                        <span style="float:right;">:</span>
                        <span style="float:right;color:red;">*</span>
                    </span>
                </div>
                <div style="width: 1%;float: left;"></div>
                <div style="width: 69%;float: left;">
                    <input style="width: 75%;"
                           name="Name"
                           type="text"
                           class="textbox textbox1"
                           ng-model="register.Name"
                           ng-class="{'has-error': showErrorMsg(registerValid.Name)}"
                           required
                           placeholder="Họ Và Tên...">
                </div>

                <div class="clear"></div>

                <div style="width: 30%;float: left;">
                    <span style="float: right; padding: 11px;">Địa Chỉ:</span>
                </div>
                <div style="width: 1%;float: left;"></div>
                <div style="width: 69%;float: left;">
                    <input style="width: 75%;"
                           name="Address"
                           type="text"
                           class="textbox textbox1"
                           ng-model="register.Address"
                           placeholder="Địa Chỉ...">
                </div>

                <div class="clear"></div>

                <div style="width: 30%;float: left;">
                    <span style="float: right; padding: 11px;">Email:</span>
                </div>
                <div style="width: 1%;float: left;"></div>
                <div style="width: 69%;float: left;">
                    <input style="width: 75%;"
                           name="Email"
                           type="text"
                           class="textbox textbox1"
                           ng-model="register.Email"
                           placeholder="Email...">
                </div>

                <div class="clear"></div>

                <div style="width: 30%;float: left;">
                    <span style="float: right; padding: 11px;">Điện Thoại:</span>
                </div>
                <div style="width: 1%;float: left;"></div>
                <div style="width: 69%;float: left;">
                    <input style="width: 75%;"
                           name="Phone"
                           type="text"
                           class="textbox textbox1"
                           ng-model="register.Phone"
                           placeholder="Điện Thoại...">
                </div>

                <div class="clear"></div>

                <div>
                    <button type="button"
                            id="btnSave"
                            class="mybutton"
                            ng-click="save(registerValid)">
                        Đăng Ký
                    </button>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
}